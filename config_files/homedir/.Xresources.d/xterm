!===============
! XTerm
!===============

XTerm*termName: xterm-256color

! Fonts
XTerm*faceName: Hack:size=10:antialias=true
! If needed XTerm*boldFont: Hack-Bold
! from 0.9 to 1.5
XTerm*scaleHeight: 1.0

! Options
XTerm*locale: true
XTerm*saveLines: 9000
XTerm*bellIsUrgent: true
XTerm*scrollBar: false
XTerm*scrollBar.width: 8

! Mouse pointer
XTerm*pointerColor: #a39e9b
XTerm*pointerColorBackground: #776e71
XTerm*cursorColor: #06b6ef
XTerm*cursorBlink: false


